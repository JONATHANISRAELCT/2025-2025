using System;
using System.Collections.Generic;

class Traductor
{
    static void Main(string[] args)
    {
        // Diccionario inicial espa√±ol -> ingl√©s
        Dictionary<string, string> diccionario = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
        {
            {"tiempo", "time"},
            {"persona", "person"},
            {"a√±o", "year"},
            {"camino", "way"},
            {"d√≠a", "day"},
            {"cosa", "thing"},
            {"hombre", "man"},
            {"mundo", "world"},
            {"vida", "life"},
            {"mano", "hand"},
            {"parte", "part"},
            {"ni√±o", "child"},
            {"ojo", "eye"},
            {"mujer", "woman"},
            {"lugar", "place"},
            {"trabajo", "work"},
            {"semana", "week"},
            {"caso", "case"},
            {"punto", "point"},
            {"gobierno", "government"},
            {"empresa", "company"}
        };

        int opcion;
        do
        {
            Console.WriteLine("\n==================== MEN√ö ====================");
            Console.WriteLine("1. Traducir una frase");
            Console.WriteLine("2. Agregar palabras al diccionario");
            Console.WriteLine("0. Salir");
            Console.Write("Seleccione una opci√≥n: ");
            
            if (!int.TryParse(Console.ReadLine(), out opcion))
            {
                Console.WriteLine("‚ö†Ô∏è Opci√≥n inv√°lida. Intente de nuevo.");
                continue;
            }

            switch (opcion)
            {
                case 1:
                    TraducirFrase(diccionario);
                    break;
                case 2:
                    AgregarPalabra(diccionario);
                    break;
                case 0:
                    Console.WriteLine("üëã Saliendo del traductor...");
                    break;
                default:
                    Console.WriteLine("‚ö†Ô∏è Opci√≥n inv√°lida.");
                    break;
            }
        } while (opcion != 0);
    }

    static void TraducirFrase(Dictionary<string, string> diccionario)
    {
        Console.Write("\nIngrese una frase en espa√±ol: ");
        string frase = Console.ReadLine();

        string[] palabras = frase.Split(new char[] { ' ', ',', '.', ';', ':', '!', '?' }, StringSplitOptions.None);
        string resultado = frase;

        foreach (string palabra in palabras)
        {
            if (diccionario.ContainsKey(palabra.ToLower()))
            {
                resultado = resultado.Replace(palabra, diccionario[palabra.ToLower()]);
            }
        }

        Console.WriteLine("\nTraducci√≥n: " + resultado);
    }

    static void AgregarPalabra(Dictionary<string, string> diccionario)
    {
        Console.Write("\nIngrese la palabra en espa√±ol: ");
        string espanol = Console.ReadLine().Trim().ToLower();

        if (diccionario.ContainsKey(espanol))
        {
            Console.WriteLine("‚ö†Ô∏è Esa palabra ya existe en el diccionario.");
            return;
        }

        Console.Write("Ingrese la traducci√≥n en ingl√©s: ");
        string ingles = Console.ReadLine().Trim().ToLower();

        diccionario.Add(espanol, ingles);
        Console.WriteLine($"‚úÖ Palabra agregada: {espanol} -> {ingles}");
    }
}
